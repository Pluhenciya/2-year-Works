<Page x:Class="AlchemyGame.Game.Pages.AlchemistTablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlchemyGame.Game.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Алхимический стол">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Resourses/backgroundAlchemist.png"/>
        </Grid.Background>
        <Button x:Name="BagButton" Content="Рюкзак" Grid.Column="2" Grid.Row="0"/>
        <WrapPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Width="0"/>
        <StackPanel Grid.Column="2" Grid.Row="1">
            <Button Content="Вода" Click="Button_Click"/>
            <Button Content="Огонь" Click="Button_Click"/>
            <Button Content="Земля" Click="Button_Click"/>
            <Button Content="Воздух" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
