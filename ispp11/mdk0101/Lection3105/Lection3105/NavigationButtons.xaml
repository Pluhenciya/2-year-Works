<UserControl x:Class="Lection3105.NavigationButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lection3105"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width" Value="30"/>
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal" Background="Lime">
        <Button Content="&lt;&lt;" x:Name="FirstButton" Click="FirstButton_Click"/>
        <Button Content="&lt;"/>
        <Button Content="&gt;"/>
        <Button Content="&gt;&gt;" x:Name="LastButton" Click="LastButton_Click"/>
    </StackPanel>
</UserControl>
