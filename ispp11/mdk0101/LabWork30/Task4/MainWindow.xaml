<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300"
                CheckBox.Click="ChangeBackgroundCheckBox_Click" Slider.ValueChanged="ChangeBackgroundSlider_ValueChanged">
        <CheckBox x:Name="RedCheckBox">
            <StackPanel Orientation="Horizontal">
                <Label Content="R"/>
                <Slider x:Name="RedSlider" Width="256" Maximum="255"/>
            </StackPanel>
        </CheckBox>
        <CheckBox x:Name="GreenCheckBox">
            <StackPanel Orientation="Horizontal">
                <Label Content="G"/>
                <Slider x:Name="GreenSlider" Width="256" Maximum="252"/>
            </StackPanel>
        </CheckBox>
        <CheckBox x:Name="BlueCheckBox">
            <StackPanel Orientation="Horizontal">
                <Label Content="B"/>
                <Slider x:Name="BlueSlider" Width="256" Maximum="255"/>
            </StackPanel>
        </CheckBox>
    </StackPanel>
</Window>
