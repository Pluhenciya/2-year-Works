<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
        <Label Content="Логин"/>
        <TextBox/>
        <Label Content="Пароль"/>
        <TextBox x:Name="PasswordTextBox" Visibility="Collapsed"/>
        <PasswordBox x:Name="MaskPasswordBox"/>
        <CheckBox x:Name="VisibleCheckBox" Content="Показать пароль" Checked="VisibleCheckBox_Checked"  Unchecked="VisibleCheckBox_Unchecked"/>
        <Button x:Name="SubscriptionButton" Content="Авторизоваться"/>
    </StackPanel>
</Window>
