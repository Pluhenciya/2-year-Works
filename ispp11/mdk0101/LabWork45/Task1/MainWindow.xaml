<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Введите запрос"/>
        <TextBox x:Name="queryTextBox"/>
        <Button x:Name="executeButton" Content="Выполнить запрос" Click="ExecuteButton_Click"/>
        <Button x:Name="executeTableButton" Content="Выполнить запрос в таблицу" Click="ExecuteTableButton_Click"/>
        <Button x:Name="showBookButton" Content="Показать книги" Click="ShowBookButton_Click"/>
        <Button x:Name="countRowsButton" Content="Количество изменённых строк" Click="CountRowsButton_Click"/>
        <TextBlock Text="Введите id книги"/>
        <TextBox x:Name="idBookTextBox"/>
        <TextBlock Text="Введите новую цену книги"/>
        <TextBox x:Name="newPriceTextBox"/>
        <Button x:Name="updatePriceButton" Content="Изменить цену книги" Click="UpdatePriceButton_Click"/>
        <Button x:Name="updateDataBaseButton" Content="Сохранить" Click="UpdateDataBaseButton_Click"/>
        <DataGrid x:Name="sqlDataGrid" Height="100"/>
    </StackPanel>
</Window>
