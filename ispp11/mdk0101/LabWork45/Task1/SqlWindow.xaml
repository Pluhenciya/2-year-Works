<Window x:Class="Task1.SqlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="SqlWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Укажите цену"/>
        <TextBox x:Name="priceTextBox"/>
        <Button x:Name="getCountBooksButton" Content="Количесво книг" Click="GetCountBooksButton_Click"/>
        <TextBlock Text="Укажите запрос на вставку данных"/>
        <TextBox x:Name="commandTextBox"/>
        <Button x:Name="executeSqlCommandInsertButton" Content="Выполнить запрос" Click="ExecuteSqlCommandInsertButton_Click"/>
        <TextBlock Text="Укажите цену"/>
        <TextBox x:Name="priceFilterTextBox"/>
        <TextBlock Text="Укажите жанр"/>
        <TextBox x:Name="genreTextBox"/>
        <Button x:Name="getBooksLessPriceByGenreButton" Content="Вывести таблицу" Click="GetBooksLessPriceByGenre_Click"/>
        <Button x:Name="UpdateBookById" Content="Изменить данные" Click="UpdateBookById_Click"/>
        <DataGrid x:Name="contentDataGrid"/>
        
        
    </StackPanel>
</Window>
