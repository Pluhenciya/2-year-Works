<Window x:Class="Task1.CloseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="Подтверждение" Height="170" Width="450">
    <DockPanel Background="AliceBlue">
        <Image Source="/Images/questionIcon.png" Margin="20"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom" Margin="30 20">
            <Button x:Name="YesButton" Content="Да" Background="#FF87E094" Margin="15 0" Height="30" Width="60" FontSize="17"
                    IsDefault="True" Click="YesButton_Click"/>
            <Button Content="Нет" Background="#FFE0787D"  Height="30" Width="60" FontSize="17" IsCancel="True"/>
        </StackPanel>
        <TextBlock Text="Вы хотите закрыть приложение?" FontSize="19" TextWrapping="Wrap" Margin="0 10"/>
    </DockPanel>
</Window>
