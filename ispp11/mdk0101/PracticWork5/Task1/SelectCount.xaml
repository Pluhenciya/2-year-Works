<UserControl x:Class="Task1.SelectCount"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Task1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Height="20">
        <Button x:Name="DeleteButton" Content="-" Width="20" Click="DeleteButton_Click"/>
        <TextBox x:Name="CountTextBox" Width="50" Text="1"/>
        <Button x:Name="AddButton" Content="+" Width="20" Click="AddButton_Click"/>
    </StackPanel>
</UserControl>
