<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="gameCanvas">
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF075A2E" Offset="1"/>
                <GradientStop Color="#FF9FD1F1" Offset="0"/>
                <GradientStop Color="#FFB9EAA4" Offset="0.598"/>
                <GradientStop Color="#FFFBFBFB" Offset="0.538"/>
            </LinearGradientBrush>
        </Canvas.Background>
        <Label x:Name="scoreLabel"  Content="0" Foreground="Red" FontSize="30"/>
    </Canvas>
</Window>
