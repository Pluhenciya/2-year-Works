<Page x:Class="Task1.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Настройки">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
        <Label Content="Логин"/>
        <TextBox x:Name="loginTextBox"/>
        <Label Content="Пароль"/>
        <TextBox x:Name="passwordTextBox"/>
        <Label Content="E-mail"/>
        <TextBox x:Name="emailTextBox"/>
        <Button x:Name="saveButton" Content="Сохранить" Click="SaveButton_Click"/>
    </StackPanel>
</Page>
